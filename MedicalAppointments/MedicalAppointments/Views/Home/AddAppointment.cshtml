@model MedicalAppointments.Models.AppointmentViewModel
@{
    ViewBag.Title = "Add Appointment";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div>
    <h4>Add new appointment for patient</h4>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Add", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <span class="col-md-2 control-label">Type Id:</span>
                        <div class="col-md-10">
                            <input type="text" name="appointmentTypeId" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="col-md-2 control-label">Date:</span>
                        <div class="col-md-10">
                            <input type="date" name="appointmentDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="col-md-2 control-label">Time:</span>
                        <div class="col-md-10">
                            <input type="time" name="appointmentTime" class="form-control" />
                        </div>
                    </div>
                    <input type="hidden" name="patientId" class="form-control" value="@Model.PatientId" />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn btn-info" />
                        </div>
                    </div>
                }
                </section>
            </div>
    </div>
</div>
